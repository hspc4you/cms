
@charset"utf-8";
body{ 
	position: relative;
	padding-top:3rem;
	background:  url(../images/scr-bg.png) 0 0 no-repeat;
	-webkit-background-size: 100% 100%;
	background-size: 100% 100%;
}

.rule{
	position: absolute;
	right: 0;
	top: 0;
	height: 3.8rem;
	width: 3.8rem;
	display: block;
	background:  url(../images/src-btn-bg.png) 0 0 no-repeat;
	-webkit-background-size: 100% 100%;
	background-size: 100% 100%;
}
.bannr{

    box-sizing: border-box;
	width: 96%;
	margin:0 auto;
	padding:4rem 1.8rem;
	height: 12.5rem;
	position: relative;
	background:  url(../images/scr-ban.png) bottom center no-repeat;
	-webkit-background-size: 100% auto;
	background-size: 100% auto;
}
.ban-inner{
	height:2.2rem;
	width: 60%;
	display: block;
	position: absolute;
	bottom: 1.2rem;
	left: 50%;
	margin-left:-30%;
	text-align: center;
	line-height: 2.2rem;
	color:#ffee44;
	font-size: 1rem;
	background:  url(../images/scr-num-bg.png ) 0 0 no-repeat;
	-webkit-background-size: 100% auto;
	background-size: 100% auto;
}
.box{
	width: 84%;
	height: 12rem;
	margin:2.4rem auto 0;
	padding-top:1rem;
	background:  url(../images/scr-box-bg.png) 0 0 no-repeat;
	-webkit-background-size: 100% 100%;
	background-size: 100% 100%;
}
.hint-num{
	width: 84%;
	height: 2.2rem;
	margin:0 auto 0.4rem;
	background:  url(../images/src-more.png) 0 0 no-repeat;
	-webkit-background-size: 100% 100%;
	background-size: 100% 100%;
}
.content{
	width: 90%;
	height: 6.2rem;
	margin:0 auto;
    position: relative;
}
#mask_img_bg{
	height: 100%;
	width: 100%;
	padding-top: 0.9rem;
	text-align: center;
	color:#fb7552;
	position: absolute;
    left: 0rem;
    top: 0rem;
    border:2px dashed #aaaaaa;
    background:  url(../images/scr-box-in-bg.png) 0 0 no-repeat;
    -webkit-background-size: 100% auto;
    background-size: 100% auto;
}
#mask_img_bg img{
	display: block;
	margin:0 auto 0.3rem;
	height: 2.8rem;
	width: 2.8rem;


}  
#redux {
    position: absolute;
    padding: 2px;
    box-sizing: border-box;
    width: 100%;
    height: 100%;
    border-radius: 6px;
    -webkit-border-radius: 6px;
}