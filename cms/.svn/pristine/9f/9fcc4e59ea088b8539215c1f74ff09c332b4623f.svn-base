
@charset"utf-8";
body{ 
	position: relative;
	padding-top:3rem;
	
}
.bg{
	height: 100%;
	width: 100%;
	position: fixed;
	left: 0;
	top:0;
	z-index: -1;
	background: #ae2323 url(../images/squ-bg.png) 0 0 no-repeat;
	-webkit-background-size: 100% 100%;
	background-size: 100% 100%;
}
.rule{
	position: absolute;
	right: 0;
	top: 0.8rem;
	height: 4.6rem;
	width: 6.2rem;
	display: block;
	z-index: 10;
	background:  url(../images/squ-btn-bg.png) 0 0 no-repeat;
	-webkit-background-size: 100% 100%;
	background-size: 100% 100%;
}
.bannr{

    box-sizing: content-box;
	width: 90%;
	margin:0 auto 0.3rem;
	height: 9.5rem;
	position: relative;
	background:  url(../images/squ-ban.png) center center no-repeat;
	-webkit-background-size: 100% auto;
	background-size: 100% auto;
}



#box {
	width:80%;
	min-height: auto;
	perspective:1200px;
	margin:0% auto;
	padding:1.3rem 1.3rem 1.6rem 1.3rem;
	overflow: hidden;
	background:  url(../images/squ-box-bg.png) 0 0 no-repeat;
	-webkit-background-size:100% 100%;
	background-size:100% 100%;
}
.squ-con {
	float:left;
	width:31%;
	border-radius: 8px;
	margin:0.3rem 0rem 0 0.3rem;
	position: relative;
	overflow: hidden;
	display:flex;
	flex-direction:row;
	justify-content:center;
	align-items:center;
}
 
div.squ-con img{

	width: 100%;
	height: 100%;
}
div.squ-con i{
	width: 100%;
	height: 100%;
	display: block;
	position: absolute;
	left: 0;
	top:0;
	background:rgba(218,158,98,0.75);
}
.squ-con-click {
	

	cursor:pointer;
	display:flex;
	flex-direction:column;
	justify-content:center;
	
}

#box  .active i{
	display: none;
	
}
.notice{
	margin-top: 0.6rem;
}
.notice p{
	font-weight: 700;
	text-align: center;
	line-height: 1.2rem;
	font-size: 1rem;
	color:#670909;
	-webkit-text-stroke:1px #fdc481;
}
.notice p strong{
	font-size: 1.2rem;
	font-weight: normal;
}